
@{
    ViewData["Title"] = "Movie Application";
}

@model Mission06_ma495.Models.ApplicationResponse

<div>
    <h1>Add a film by completing the form</h1>
</div>

<form method="post">
    <label asp-for="Category">Category:</label>
    <input asp-for="Category" />
    <br />
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select>
    <br />
    <label asp-for="Edited"></label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent to:</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" />
    <br />

    <button type="submit">Submit Application</button>

</form>